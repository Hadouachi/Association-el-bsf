generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Activity {
  id              String   @id @default(cuid())
  title           String
  description     String?
  longDescription String?
  date            String?
  time            String?
  location        String?
  participants    String?
  status          ActivityStatus?
  coverImage      String?
  images          Json?
  videos          Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AboutContent {
  id          String   @id @default(cuid())
  type        AboutContentType
  title       String
  content     String?
  images      Json?
  videos      Json?
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContentBlock {
  id          String   @id @default(cuid())
  activityId  String
  type        String
  content     String?
  images      Json?
  videos      Json?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ActivityStatus {
  upcoming
  ongoing
  completed
}

enum AboutContentType {
  ANNOUNCEMENT
  WORK_PROJECT
  INFORMATION
  MILESTONE
  PARTNERSHIP
}
